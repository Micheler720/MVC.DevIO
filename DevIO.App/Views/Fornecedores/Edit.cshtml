@model DevIO.App.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = "Editar Fornecedor";
}


<h4>@ViewData["Title"]</h4>
<hr />
<form asp-action="Edit">
    <vc:summary></vc:summary>
    <input type="hidden" asp-for="Id" />

    <div class="form-row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Documento" class="control-label"></label>
                <input asp-for="Documento" class="form-control" />
                <span asp-validation-for="Documento" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="TipoFornecedor" class="control-label"></label> <br />
                <input type="radio" value="1" asp-for="TipoFornecedor" checked /> Pessoa Fisica <br />
                <input type="radio" value="2" asp-for="TipoFornecedor" /> Pessoa Juridica <br />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Cadastrar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-info">Voltar</a>
    </div>
</form>

<div id="EnderecoTarget">
    <partial name="_DetalhesEndereco" />
</div>

<div>
    <h4>Produtos</h4>
    <hr />
    <partial name="../Produtos/_ListaProdutos" model="@Model.Produtos" />
</div>

<div id="myModal" class="modal fade in">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="myModalContent"></div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        SetModal();
    </script>
}
